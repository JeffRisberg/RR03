<h1>Listing Posts</h1>

<%= link_to 'New post', :action => :new %>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= link_to 'Show', :action => :show, :id => post.id %>
    <td><%= link_to 'Edit', :action => :edit, :id => post.id %>
    <td><%= link_to 'Destroy', { :action => :destroy, :id => post.id }, :method => :delete, :confirm => 'Are you sure?' %>
  </tr>
<% end %>
</table>
